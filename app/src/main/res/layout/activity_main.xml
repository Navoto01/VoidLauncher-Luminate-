<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <!-- Status bar spacer -->
    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main app grid area -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/pageIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Page indicator dots -->
    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/page_indicator_bottom_margin"
        app:layout_constraintBottom_toTopOf="@+id/searchContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search container -->
    <FrameLayout
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/container_horizontal_margin"
        android:layout_marginEnd="@dimen/container_horizontal_margin"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ios_search_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/dockContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:focusable="true">

        <!-- Search Bar Content -->
        <LinearLayout
            android:id="@+id/searchBarContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_bar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/search_bar_padding">

            <!-- FONTOS VÁLTOZÁS: ID-t adtunk az ikonoknak -->
            <TextView
                android:id="@+id/searchIcon"
                android:layout_width="@dimen/search_bar_icon_size"
                android:layout_height="@dimen/search_bar_icon_size"
                android:text=""
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/search_bar_icon_size"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/harmonyos" />


            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="#C8C8C8"
                android:textSize="@dimen/search_bar_text_size" />

            <!-- FONTOS VÁLTOZÁS: ID-t adtunk az ikonoknak -->
            <TextView
                android:id="@+id/voiceSearchIcon"
                android:layout_width="@dimen/search_bar_icon_size"
                android:layout_height="@dimen/search_bar_icon_size"
                android:text=""
                android:layout_marginStart="8dp"
                android:textSize="@dimen/search_bar_icon_size"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/harmonyos" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- FONTOS VÁLTOZÁS: ID-t adtunk az ikonoknak -->
            <TextView
                android:id="@+id/otherIcon"
                android:layout_width="@dimen/search_bar_icon_size"
                android:layout_height="@dimen/search_bar_icon_size"
                android:text=""
                android:layout_marginStart="8dp"
                android:textSize="@dimen/search_bar_icon_size"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/harmonyos" />

        </LinearLayout>

        <!-- Search Results List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_bar_height"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Dock container -->
    <LinearLayout
        android:id="@+id/dockContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/dock_bottom_margin"
        android:background="@drawable/ios_dock_background"
        android:padding="1dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dockRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
